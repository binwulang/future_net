#ifndef DIJKSTRA_H_
#define DIJKSTRA_H_
#include "Graph.h"
const int INFINTY=0x7fffffff;
class Dijkstra {
public:
	bool operator()(my a,my b){
		return a.data<b.data;
	}
	Dijkstra();
	virtual ~Dijkstra();
};
class PD_Info{
public:
	int distTo;
	DirectedEdge *pathTo;
	int id;
	static int id_cout;
	PD_Info(int id){
		this->distTo=INFINTY;
		this->id=id;
		this->pathTo=NULL;
	}
	PD_Info(){
		this->distTo=INFINTY;
		this->id=id_cout++;
		this->pathTo=NULL;
	}
};
#endif /* DIJKSTRA_H_ */
