#ifndef DIJKSTRA_H_
#define DIJKSTRA_H_
#include "Graph.h"

class Dijkstra {
public:
	static const int INFINTY=0x7fffffff;
	Dijkstra();
	virtual ~Dijkstra();
};
class PD_Info{
	int distTo;
	DirectedEdge *pathTo;
	int id;
public:
	static int id_cout=0;
	PD_Info(int id){
		this->distTo=Dijkstra::INFINTY;
		this->id=id;
		this->pathTo=NULL;
	}
	PD_Info(){
		this->distTo=Dijkstra::INFINTY;
		this->id=id_cout++;
		this->pathTo=NULL;
	}
};

#endif /* DIJKSTRA_H_ */
